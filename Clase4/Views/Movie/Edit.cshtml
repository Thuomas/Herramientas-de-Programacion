@model Movie

<h2> @Model.Name</h2>
<p>Codigo: @Model.Code (no editable)</p>
<p>Duracion: @Model.Minutes</p>
<p>Categoria: @Model.Category</p>
<p>Review: @Model.Review</p>

<form method="post"
    asp-action="Cambiar">
     <div class="mb-3">
        <label asp-for="Code" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Code">
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Category">
    </div>
    <div class="mb-3">
        <label asp-for="Minutes" class="form-label"></label>
        <input type="number" class="form-control" asp-for="Minutes">
    </div>
    <div class="mb-3">
        <label asp-for="Review" class="form-label"></label>
        <textarea class="form-control" asp-for="Review" cols="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary"> Guardar </button>
</form>